<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <dependencies>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-validator</artifactId>
            <version>4.3.1.Final</version>
        </dependency>
    </dependencies>

    <!-- 继承基础配置,核心依赖包，编译选项和插件配�? -->
    <parent>
        <groupId>com.acooly</groupId>
        <artifactId>acooly-parent</artifactId>
        <version>3.1.0-SNAPSHOT</version>
    </parent>

    <groupId>com.yiji</groupId>
    <artifactId>openapi-server</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>

    <properties>

        <openapi-framework.version>1.1.3</openapi-framework.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- openapi框架依赖 -->
            <dependency>
                <groupId>com.yiji</groupId>
                <artifactId>openapi-framework-core</artifactId>
                <version>${openapi-framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.yiji</groupId>
                <artifactId>openapi-framework-nms</artifactId>
                <version>${openapi-framework.version}</version>
            </dependency>
            <dependency>
                <groupId>com.yiji</groupId>
                <artifactId>openapi-framework-manage</artifactId>
                <version>${openapi-framework.version}</version>
            </dependency>

            <!-- 模块依赖 -->
            <dependency>
                <groupId>com.yiji</groupId>
                <artifactId>openapi-server-message</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.yiji</groupId>
                <artifactId>openapi-server-service</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.yiji</groupId>
                <artifactId>openapi-server-integration</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>


    </dependencyManagement>


    <modules>
        <module>openapi-server-assemble</module>
        <module>openapi-server-service</module>
        <module>openapi-server-message</module>
        <module>openapi-server-integration</module>
        <module>openapi-server-manage</module>
    </modules>


</project>