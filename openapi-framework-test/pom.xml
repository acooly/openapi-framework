<?xml version="1.0"?>
<project
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
        xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.acooly</groupId>
        <artifactId>openapi-framework</artifactId>
        <version>5.0.0-SNAPSHOT-optimize</version>
    </parent>

    <artifactId>openapi-framework-test</artifactId>
    <name>openapi-framework-test</name>

    <properties>
        <deploy.skip>true</deploy.skip>
    </properties>

    <dependencies>


        <!-- 服务集成(最小) -->
        <dependency>
            <groupId>com.acooly</groupId>
            <artifactId>openapi-framework-core</artifactId>
        </dependency>

        <!-- OpenApi自动文档 -->
        <dependency>
            <groupId>com.acooly</groupId>
            <artifactId>openapi-framework-apidoc</artifactId>
        </dependency>

        <!-- 接口MOCK（后台根据接口名称配置mock报文） -->
        <dependency>
            <groupId>com.acooly</groupId>
            <artifactId>openapi-framework-mock</artifactId>
        </dependency>

        <!-- OpenApi扩展，目前扩展了流控 -->
        <dependency>
            <groupId>com.acooly</groupId>
            <artifactId>openapi-framework-extensions</artifactId>
        </dependency>

        <!-- OpenApi asyncNotify -->
        <dependency>
            <groupId>com.acooly</groupId>
            <artifactId>openapi-framework-notify</artifactId>
        </dependency>

        <!-- OpenApi client -->
        <dependency>
            <groupId>com.acooly</groupId>
            <artifactId>openapi-framework-client</artifactId>
        </dependency>


        <dependency>
            <groupId>com.acooly</groupId>
            <artifactId>acooly-component-test</artifactId>
        </dependency>

        <dependency>
            <groupId>com.acooly</groupId>
            <artifactId>openapi-framework-demo-service</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-devtools</artifactId>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>com.acooly</groupId>
            <artifactId>acooly-coder</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>


</project>
