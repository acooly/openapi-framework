<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>openapi</param-value>
	</context-param>

	<!-- Spring配置 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:spring/applicationContext-main.xml
		</param-value>
	</context-param>

	<context-param>
		<param-name>logConfigLocation</param-name>
		<param-value>classpath:logback.xml</param-value>
	</context-param>
    
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- XSS defence filter -->
	<filter>
		<filter-name>XssDefenseFilter</filter-name>
		<filter-class>com.acooly.module.security.defence.XssDefenseFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>XssDefenseFilter</filter-name>
		<url-pattern>*.html</url-pattern>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>


	<!-- static resource access filter -->
	<filter>
		<filter-name>staticResourceSpringFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>staticResourceSpringFilter</filter-name>
		<url-pattern>/manage/script/*</url-pattern>
		<url-pattern>/manage/image/*</url-pattern>
		<url-pattern>/manage/style/*</url-pattern>
		<url-pattern>/manage/plugin/*</url-pattern>
		<url-pattern>/manage/layout/*</url-pattern>
	</filter-mapping>

	<!-- Hibernate Open Session in View Filter -->
	<filter>
		<filter-name>openEntityManagerInViewFilter</filter-name>
		<filter-class>org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>openEntityManagerInViewFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>

	<!-- Shiro Security filter -->
	<filter>
		<filter-name>shiroFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>shiroFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<url-pattern>*.html</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>

	<!-- druid数据源Web监控配置 -->
	<filter>
		<filter-name>druidWebStatFilter</filter-name>
		<filter-class>com.alibaba.druid.support.http.WebStatFilter</filter-class>
		<init-param>
			<param-name>exclusions</param-name>
			<param-value>/manage/error/*,/manage/layout/*,/manage/plugin/*,*.js,*.css,/manage/druid*,*.jsp</param-value>
		</init-param>
		<init-param>
			<param-name>principalSessionName</param-name>
			<param-value>sessionInfo</param-value>
		</init-param>
		<init-param>
			<param-name>profileEnable</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>druidWebStatFilter</filter-name>
		<url-pattern>*.html</url-pattern>
	</filter-mapping>


	<!--Setting system property -->
	<listener>
		<listener-class>com.acooly.integration.SystemPropertyIntergrationListener</listener-class>
	</listener>

	<!--Intergration log4j/slf4j/commons-logger/jdk14-logger to log4j -->
	<listener>
		<listener-class>com.acooly.integration.log.LogbackIntergrationListener</listener-class>
	</listener>

	<!--Spring Context loader -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- OpenApi framework DispatchServlet -->
	<servlet>
		<servlet-name>OpenApiFramework</servlet-name>
		<servlet-class>com.acooly.openapi.framework.core.servlet.OpenAPIDispatchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>OpenApiFramework</servlet-name>
		<url-pattern>/gateway.html</url-pattern>
		<url-pattern>/gateway</url-pattern>
	</servlet-mapping>


	<!-- Spring MVC Servlet -->
	<servlet>
		<servlet-name>springServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				classpath*:spring/acooly/acooly-springmvc.xml
				classpath*:spring/**/*-servlet.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>springServlet</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>

	<!-- jcaptcha -->
	<servlet>
		<servlet-name>jcaptcha</servlet-name>
		<servlet-class>com.acooly.module.security.jcaptcha.ImageCaptchaServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>jcaptcha</servlet-name>
		<url-pattern>/jcaptcha.jpg</url-pattern>
	</servlet-mapping>

	<!-- druid监控页面，使用${pageContext.request.contextPath}/druid/index.html访问 -->
	<servlet>
		<servlet-name>druidStatView</servlet-name>
		<servlet-class>com.alibaba.druid.support.http.StatViewServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>druidStatView</servlet-name>
		<url-pattern>/manage/druid/*</url-pattern>
	</servlet-mapping>


	<!-- OpenApi SDK Notify Servlet -->
	<servlet>
		<servlet-name>ApiServiceClientServlet</servlet-name>
		<servlet-class>com.yiji.framework.openapi.sdk.notify.ApiServiceClientServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ApiServiceClientServlet</servlet-name>
		<url-pattern>/openapi/sdk/notify</url-pattern>
	</servlet-mapping>

	<!-- NotifyReceiveMockServlet -->
	<servlet>
		<servlet-name>NotifyReceiveMockServlet</servlet-name>
		<servlet-class>com.acooly.openapi.framework.test.mock.NotifyReceiveMockServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NotifyReceiveMockServlet</servlet-name>
		<url-pattern>/notify/receiver</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>NotifySenderMockServlet</servlet-name>
		<servlet-class>com.acooly.openapi.framework.test.mock.NotifySenderMockServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NotifySenderMockServlet</servlet-name>
		<url-pattern>/notify/sender</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>300</session-timeout>
	</session-config>

	<welcome-file-list>
		<welcome-file>/index.html</welcome-file>
	</welcome-file-list>

</web-app>
