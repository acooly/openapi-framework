<?xml version="1.0"?>
<project
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
        xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.yiji</groupId>
        <artifactId>openapi-framework</artifactId>
        <version>4.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>openapi-framework-core</artifactId>
    <name>openapi-framework-core</name>

    <dependencies>

        <dependency>
            <groupId>com.yiji</groupId>
            <artifactId>openapi-framework-common</artifactId>
        </dependency>

        <dependency>
            <groupId>com.yiji</groupId>
            <artifactId>openapi-framework-service-persistent</artifactId>
        </dependency>

        <dependency>
            <groupId>com.yiji</groupId>
            <artifactId>openapi-framework-facade</artifactId>
        </dependency>

    </dependencies>


    <profiles>

        <profile>
            <id>develop</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>

        <profile>
            <id>deploy</id>
            <activation>
                <property>
                    <name>opt</name>
                    <value>deploy</value>
                </property>
            </activation>
            <build>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                        <filtering>true</filtering>
                        <excludes>
                            <exclude>spring/keystore/**/*</exclude>
                        </excludes>
                    </resource>
                </resources>
            </build>
        </profile>
    </profiles>

</project>
